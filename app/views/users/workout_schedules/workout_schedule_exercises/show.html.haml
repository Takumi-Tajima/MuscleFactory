.container.mt-4
  .d-flex.justify-content-between.align-items-center.mb-4
    %h1.mb-0
      = @workout_schedule_exercise.training_exercise.name
    = link_to users_workout_schedule_path(@workout_schedule), class: 'btn btn-outline-secondary' do
      %i.bi.bi-arrow-left
      スケジュール詳細に戻る
  %h2.my-3.fs-5.card
    .card-body
      = @workout_schedule_exercise.training_exercise.description
  
  = link_to 'セットを追加', 
            new_users_workout_schedule_workout_schedule_exercise_exercise_set_path(@workout_schedule, @workout_schedule_exercise), 
            class: 'btn btn-primary my-3', data: { turbo_frame: 'modal' }

  = turbo_frame_tag 'exercise_sets_content' do
    .card
      .card-body
        = render 'exercise_sets_table', exercise_sets: @exercise_sets
