%h1.mb-4 タグ一覧

.row
  .col-12.mb-4
    = link_to '新規作成', new_users_exercise_tag_path, class: 'btn btn-primary'

.row
  .col-12
    %table.table.table-striped.table-hover
      %thead
        %tr
          %th 名前
          %th 作成日時
          %th
      %tbody
        - @exercise_tags.each do |exercise_tag|
          %tr
            %td= exercise_tag.name
            %td= l(exercise_tag.created_at)
            %td.text-end
              = link_to '詳細', users_exercise_tag_path(exercise_tag), class: 'btn btn-sm btn-info me-2'
              = link_to '編集', edit_users_exercise_tag_path(exercise_tag), class: 'btn btn-sm btn-success me-2'
              = button_to '削除', users_exercise_tag_path(exercise_tag),
                method: :delete,
                data: { turbo_confirm: '本当に削除しますか？' },
                class: 'btn btn-sm btn-danger'
