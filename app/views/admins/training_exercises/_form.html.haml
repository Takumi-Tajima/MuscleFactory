= simple_form_for [:admins, training_exercise] do |f|
  = f.input :name
  = f.input :description, input_html: { rows: 5 }
  = f.input :muscle_group_names, input_html: { data: { controller: 'select', select_options_value: MuscleGroup.default_order.map { |mg| {value: mg.name, text: mg.name} }.to_json } }
  = f.input :exercise_tag_names, input_html: { data: { controller: 'select', select_options_value: ExerciseTag.default_order.map { |tag| {value: tag.name, text: tag.name} }.to_json } }
  = f.button :submit, class: 'btn-primary me-2'
