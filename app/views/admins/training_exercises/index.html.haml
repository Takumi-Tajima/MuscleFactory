%h1.mb-4 トレーニング種目一覧

.row
  .col-12.mb-4
    = link_to '新規作成', new_admins_training_exercise_path, class: 'btn btn-primary'

.table-responsive
  %table.table
    %thead
      %tr
        %th ID
        %th 種目名
        %th 作成日時
        %th.text-end アクション

    %tbody
      - @training_exercises.each do |exercise|
        %tr
          %td= exercise.id
          %td= exercise.name
          %td= l(exercise.created_at, format: :short)
          %td.text-end
            = link_to '詳細', admins_training_exercise_path(exercise), class: 'btn btn-sm btn-info me-2'
            = link_to '編集', edit_admins_training_exercise_path(exercise), class: 'btn btn-sm btn-success me-2'
            = button_to '削除', admins_training_exercise_path(exercise),
              method: :delete, 
              data: { turbo_confirm: '本当に削除しますか？' }, 
              class: 'btn btn-sm btn-danger'
