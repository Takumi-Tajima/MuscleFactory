.container
  .row
    .col-12
      %h1 ワークアウトスケジュール一覧

      .table-responsive
        %table.table
          %thead
            %tr
              %th ユーザー名
              %th スケジュール日
              %th
          %tbody
            - @workout_schedules.each do |schedule|
              %tr
                %td= schedule.user.name
                %td= l schedule.scheduled_on
                %td
                  = link_to '詳細', admins_workout_schedule_path(schedule), class: 'btn btn-info btn-sm'
                  = link_to '編集', edit_admins_workout_schedule_path(schedule), class: 'btn btn-warning btn-sm'
                  = link_to '削除', admins_workout_schedule_path(schedule), data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm'
