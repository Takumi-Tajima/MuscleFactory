.row.mb-4
  .col-12.d-flex.justify-content-between.align-items-center
    %h1 部位詳細
    = link_to '一覧に戻る', admins_muscle_groups_path, class: 'btn btn-outline-secondary'

.row.mb-4
  .col-12
    .card
      .card-body
        .row.mb-3
          .col-md-3.fw-bold 部位名
          .col-md-9= @muscle_group.name

.row
  .col-12
    .d-flex
      = link_to '編集', edit_admins_muscle_group_path(@muscle_group), class: 'btn btn-success me-2'
      = button_to '削除', admins_muscle_group_path(@muscle_group),
        method: :delete,
        data: { turbo_confirm: '本当に削除しますか？' },
        class: 'btn btn-danger me-2'
